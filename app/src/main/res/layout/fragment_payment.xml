<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second_primary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@color/yeallow_demoapp">

        <com.hcpt.taxinear.widget.TextViewPixeden
            android:id="@+id/btnMenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/pe_7s_menu"
            android:textColor="@color/white"
            android:textSize="@dimen/space_large" />

        <com.hcpt.taxinear.widget.TextViewRaleway
            android:id="@+id/lblTitle"
            style="@style/Layout.WrapWidthHeight"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_header"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/btnMenu"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <com.hcpt.taxinear.widget.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/profile_avartar_size"
                android:layout_height="@dimen/profile_avartar_size"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/content_description"
                android:scaleType="centerCrop" />

            <com.hcpt.taxinear.widget.TextViewRaleway
                android:id="@+id/lblFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_nano"
                android:layout_marginTop="@dimen/space_tiny"
                android:background="@color/transparent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/userRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:isIndicator="true"
                android:numStars="5"
                android:progressDrawable="@drawable/bg_rating_bar"
                android:rating="0"
                android:stepSize="0.5" />

        </LinearLayout>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@color/blue_demoapp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_demoapp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblBalance"
                    android:layout_width="@dimen/width_button"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_marginTop="@dimen/space_small"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/lbl_balance"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="italic"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtTotalPoint"
                    android:layout_width="@dimen/width_button"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/space_small"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btnPayment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_horizontal_xxlarge"
                android:layout_marginRight="@dimen/margin_horizontal_xxlarge"
                android:layout_marginTop="@dimen/space_normal"
                android:background="@color/yeallow_demoapp"
                android:gravity="center"
                android:text="@string/title_payment"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />

            <Button
                android:id="@+id/btnPayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_horizontal_xxlarge"
                android:layout_marginRight="@dimen/margin_horizontal_xxlarge"
                android:layout_marginTop="@dimen/space_tiny"
                android:background="@color/yeallow_demoapp"
                android:gravity="center"
                android:text="@string/lbl_payout"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />

            <Button
                android:id="@+id/btnTrasfers"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_horizontal_xxlarge"
                android:layout_marginRight="@dimen/margin_horizontal_xxlarge"
                android:layout_marginTop="@dimen/space_tiny"
                android:background="@color/yeallow_demoapp"
                android:gravity="center"
                android:text="@string/lbl_transfers"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />

            <Button
                android:id="@+id/btnHistory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_horizontal_xxlarge"
                android:layout_marginRight="@dimen/margin_horizontal_xxlarge"
                android:layout_marginTop="@dimen/space_tiny"
                android:background="@color/yeallow_demoapp"
                android:gravity="center"
                android:text="@string/lbl_payment_history"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />

            <Button
                android:id="@+id/btnConverterCurrency"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_horizontal_xxlarge"
                android:layout_marginRight="@dimen/margin_horizontal_xxlarge"
                android:layout_marginTop="@dimen/space_tiny"
                android:background="@color/yeallow_demoapp"
                android:gravity="center"
                android:text="@string/lbl_currency_converter"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>