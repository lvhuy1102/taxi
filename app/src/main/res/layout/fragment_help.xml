<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_trip"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <ScrollView
        android:background="@color/blue_demoapp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_demoapp"
            android:orientation="vertical"
            android:padding="@dimen/space_small">

            <!-- <hcpttaxinear.widget.JustifyTextView -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:text="@string/lbl_content_help" -->
            <!-- android:textColor="@color/white" -->
            <!-- android:layout_centerInParent="true"/> -->

            <com.hcpt.taxinear.widget.TextViewRaleway
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/lblCompany"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xlarge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:gravity="center_horizontal"
                android:text="@string/lblAboutUs1"
                android:textColor="@color/white" />


            <com.hcpt.taxinear.widget.TextViewRaleway
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:gravity="center_horizontal"
                android:text="@string/lblAboutUs2"
                android:textColor="@color/white" />

            <com.hcpt.taxinear.widget.TextViewRaleway
                android:id="@+id/txtWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:gravity="center_horizontal"
                android:text="@string/lblWebsite"
                android:textColor="@color/yeallow_demoapp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:gravity="center_horizontal"
                android:text="@string/app_version"
                android:textColor="@color/white"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>