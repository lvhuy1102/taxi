<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="userRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/bg_rating_bar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="title_circle_full">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/yeallow_demoapp</item>
        <item name="android:text">@string/ic_header_cirle_full</item>
    </style>

    <style name="title_circle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/yeallow_demoapp</item>
        <item name="android:text">@string/ic_header_cirle</item>
    </style>

    <style name="et_edit_profile">
        <item name="android:background">@drawable/bg_textbox_white</item>
        <item name="android:layout_marginRight">@dimen/space_small</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text_hint_two</item>

        <item name="android:textSize">@dimen/text_size_normal</item>

        <item name="android:layout_marginTop">@dimen/space_nano</item>
        <item name="android:padding">@dimen/padding_vertical</item>
    </style>

    <style name="text_14_white">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/space_normal</item>

    </style>

    <style name="et_edit_profile_left">
        <item name="android:background">@drawable/bg_textbox_white</item>
        <item name="android:layout_marginRight">@dimen/space_small</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text_hint_two</item>

        <item name="android:textSize">@dimen/text_size_normal</item>

        <item name="android:layout_marginTop">@dimen/space_nano</item>
        <item name="android:padding">@dimen/padding_vertical</item>
    </style>
</resources>
